<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add / Edit</title>
    <link rel="stylesheet" href="/stylesheets/Inventory.css">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' />
</head>
<body>
    <%- include ../partials/header.ejs %>
    <main>
        <br>
        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1><%= title %></h1>
        
                    <form class="form" method="POST">
                        <div class="form-group">
                            <input type="hidden"
                                name="id"
                                value="<%= item._id %>"
                            >
                            <label for="itemTextField">Item Name</label>
                            <input type="text" class="form-control"
                                id="itemTextField"
                                placeholder="Enter the Item Name"
                                name="item" 
                                value="<%= item.item %>"
                                required>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="QtyTextField">Quantity</label>
                            <input type="number" class="form-control"
                            id="QtyTextField"
                            placeholder="00"
                            name="qty" 
                            value="<%= item.qty %>"
                            required>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="statusTextField">Status</label>
                            <input type="text" class="form-control"
                            id="statusTextField"
                            placeholder="Enter a status"
                            name="status" 
                            value="<%= item.status %>"
                            >
                        </div>
                        <br />
                        <div class="card">
                            <div class="card-header">Size</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="hightTextField">Hight</label>
                                    <input type="number" step="0.01" 
                                    class="form-control"
                                    id="hightTextField"
                                    placeholder="0.00"
                                    name="size_h" 
                                    value="<%= item.size.h %>"
                                    required>
                                </div>
        
                                <div class="form-group">
                                    <label for="widthTextField">Width</label>
                                    <input type="number" step="0.01"
                                    class="form-control"
                                    id="widthTextField"
                                    placeholder="0.00"
                                    name="size_w" 
                                    value="<%= item.size.w %>"
                                    required>
                                </div>
        
                                <div class="form-group">
                                    <label for="uomTextField">Hight</label>
                                    <input type="text" class="form-control"
                                    id="uomTextField"
                                    placeholder="cm"
                                    name="size_uom" 
                                    value="<%= item.size.uom %>"
                                    required>
                                </div>
                            </div>                    
                        </div>                
                        <br />
                        <div class="form-group">
                            <label for="tagTextArea">Tags <span class="text-muted">[use , to separate tags]</span></label>
                            <textarea type="text" class="form-control"
                            id="tagTextArea"
                            placeholder="Enter the tags of the item"
                            name="tags" 
                            required>
                            <%= item.tags %>
                            </textarea>
                        </div>
                        <br/>
        
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i> 
                            Submit
                        </button>
                        
                        <a href="/inventory/list" class="btn btn-warning">
                            <i class="fas fa-undo"></i> 
                            Cancel
                        </a>
        
                    </form>
                </div>
        
            </div>
        </div>
        
    </main>
    <%- include ../partials/footer.ejs %>
    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>